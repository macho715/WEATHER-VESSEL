WV_SMTP_HOST=smtp.example.com
WV_SMTP_PORT=587
WV_SMTP_TLS=true
WV_SMTP_USERNAME=
WV_SMTP_PASSWORD=
WV_SLACK_WEBHOOK=
WV_TELEGRAM_BOT_TOKEN=
WV_TELEGRAM_CHAT_ID=

# Output configuration
WV_OUTPUT_DIR=outputs
